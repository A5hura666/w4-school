{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block content %}
    <div class="p-4 sm:ml-64">
        <div class="p-4 mt-14">
            <div class="max-w-4xl mx-auto py-3 px-4 sm:px-6 lg:px-8 bg-white rounded-lg shadow-lg ">
                <h1 class="text-2xl font-bold mb-6">Modification d'un utilisateur</h1>

                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

                <div>
                    {{ form_label(form.first_name, 'Pr√©nom de l\'utilisateur', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.first_name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
                    {{ form_errors(form.first_name) }}
                </div>

                <div>
                    {{ form_label(form.last_name, 'Nom de l\'utilisateur', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.last_name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
                    {{ form_errors(form.last_name) }}
                </div>

                <div>
                    {{ form_label(form.email, 'Email de l\'utilisateur', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
                    {{ form_errors(form.email) }}
                </div>

                <div>
                    {{ form_label(form.roles, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    <div class="mt-2 space-y-2">
                        {{ form_widget(form.roles, {'attr': {'class': 'flex items-start'}}) }}
                    </div>
                    {{ form_errors(form.roles) }}
                </div>

                <div class="flex justify-end">
                    <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Save
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}