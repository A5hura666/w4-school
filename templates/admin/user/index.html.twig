{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block content %}
    <div class="p-4 sm:ml-64 bg-gray-50 dark:bg-gray-900 min-h-screen">
        <div class="p-4 mt-14">
            <div class="container mt-5 max-w-3xl mx-auto">
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg">
                    <div class="bg-gray-100 dark:bg-gray-700 rounded-t-lg p-4">
                        <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-200">Détails d'un utilisateur</h2>
                    </div>
                    <div class="p-6">
                        <ul class="space-y-4">
                            <li class="text-lg text-gray-700 dark:text-gray-300">
                                <strong class="font-semibold text-gray-900 dark:text-gray-100">Nom :</strong> {{ user.firstName }}
                            </li>
                            <li class="text-lg text-gray-700 dark:text-gray-300">
                                <strong class="font-semibold text-gray-900 dark:text-gray-100">Prénom :</strong> {{ user.lastName }}
                            </li>
                            <li class="text-lg text-gray-700 dark:text-gray-300">
                                <strong class="font-semibold text-gray-900 dark:text-gray-100">Email :</strong> {{ user.email }}
                            </li>
                            <li class="text-lg text-gray-700 dark:text-gray-300">
                                <strong class="font-semibold text-gray-900 dark:text-gray-100">Rôle :</strong> {{ userType }}
                            </li>
                        </ul>
                    </div>
                    <div class="bg-gray-100 dark:bg-gray-700 rounded-b-lg p-4 text-end">
                        <a href="{{ path('admin_users', {'userType': userType}) }}"
                           class="px-4 py-2 bg-gray-800 text-white rounded-lg shadow hover:bg-gray-700 dark:bg-gray-600 dark:hover:bg-gray-500 transition">
                            Retour à la liste des utilisateurs
                        </a>
                        <!--<a href="{{ path('admin_reset_password', {'email': user.email}) }}"
                           class="px-4 py-2 bg-red-600 text-white rounded-lg shadow hover:bg-red-500 focus:ring-4 focus:ring-red-300 dark:bg-red-700 dark:hover:bg-red-600 dark:focus:ring-red-800 transition">
                            Réinitialiser le mot de passe
                        </a>-->
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}