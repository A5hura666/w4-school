{% extends 'base.html.twig' %}

{% block title %}Page de connexiona{% endblock %}

{% block content %}
    <section class="h-full flex items-center justify-center">
        <div class="w-full max-w-md bg-white rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700">
            <div class="p-6 space-y-6">
                <!-- Logo -->
                <a href="{{ path('app_index') }}" class="flex items-center justify-center mb-6">
                    <img src="{{ asset('images/logo.svg') }}" alt="W4 Logo"
                         class="h-20 dark:hidden">
                    <img src="{{ asset('images/logo-white.svg') }}" alt="W4 Logo"
                         class="h-20 hidden dark:block">
                </a>

                <!-- Titre -->
                <h1 class="text-xl font-bold text-center text-gray-900 dark:text-white">
                    Veuillez vous identifier
                </h1>

                <!-- Formulaire -->
                <form method="post" class="space-y-4">
                    <!-- Erreurs -->
                    {% if error %}
                        <div class="text-red-500 text-sm text-center">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <!-- Utilisateur connecté -->
                    {% if app.user %}
                        <p class="text-sm text-center text-gray-700 dark:text-gray-300">
                            Connecté en tant que {{ app.user.userIdentifier }}.
                            <a href="{{ path('app_logout') }}"
                               class="text-primary-600 hover:underline dark:text-primary-400">
                                Déconnexion
                            </a>
                        </p>
                    {% endif %}

                    <!-- Email -->
                    <div>
                        <label for="username" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                            Email
                        </label>
                        <input type="email" name="_username" id="username" value="{{ last_username }}"
                               class="w-full px-4 py-2 text-sm border rounded-lg bg-gray-50 dark:bg-gray-700 dark:border-gray-600
                                  dark:text-white focus:ring-primary-500 focus:border-primary-500"
                               required autocomplete="email" autofocus>
                    </div>

                    <!-- Mot de passe -->
                    <div>
                        <label for="password" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                            Mot de passe
                        </label>
                        <input type="password" name="_password" id="password"
                               class="w-full px-4 py-2 text-sm border rounded-lg bg-gray-50 dark:bg-gray-700 dark:border-gray-600
                                  dark:text-white focus:ring-primary-500 focus:border-primary-500"
                               required autocomplete="current-password">
                    </div>

                    <!-- CSRF -->
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <!-- Checkbox Remember Me -->
                    <div class="flex items-center">
                        <input type="checkbox" name="_remember_me" id="_remember_me"
                               class="w-4 h-4 text-primary-600 border-gray-300 rounded focus:ring-primary-500 dark:bg-gray-700 dark:border-gray-600">
                        <label for="_remember_me" class="ml-2 text-sm text-gray-500 dark:text-gray-300">
                            Se souvenir de moi
                        </label>
                    </div>

                    <!-- Bouton de connexion -->
                    <button class="w-full text-white bg-primary hover:bg-primary-dark focus:ring-4 focus:outline-none focus:ring-primary-light font-medium rounded-lg text-sm px-5 py-2.5">
                        Connexion
                    </button>
                </form>

                <!-- Lien vers la page d'inscription -->
                <div class="text-sm text-center text-gray-700 dark:text-gray-300">
                    Vous n'avez pas de compte ?
                    <a href="{{ path('app_register') }}" class="text-blue-500 hover:underline dark:text-primary-400">
                        Inscrivez-vous
                    </a>
                </div>

                <!-- Lien vers la réinitialisation du mot de passe -->
                <div class="text-sm text-center text-gray-700 dark:text-gray-300">
                    <a href="{{ path('app_reset_password') }}" class="text-blue-500 hover:underline dark:text-primary-400">
                        Mot de passe oublié ?
                    </a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

