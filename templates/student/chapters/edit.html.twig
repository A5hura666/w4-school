{% extends 'base.html.twig' %}

{% block title %}Modifier le chapitre - {{ chapter.title }}{% endblock %}

{% block content %}
    <div class="max-w-4xl mx-auto mt-10 p-5 bg-white shadow-md rounded-lg">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">Modifier le Chapitre : {{ chapter.title }}</h1>

        <!-- Formulaire de modification -->
        <form method="POST" action="{{ path('app_chapter_edit', {'id': chapter.id}) }}" enctype="multipart/form-data">
            {{ form_start(form) }}

            <!-- Champ Titre -->
            <div class="mb-4">
                {{ form_label(form.title, 'Titre du chapitre', {'class': 'block text-gray-700 font-medium'}) }}
                <div class="mt-1">
                    {{ form_widget(form.title, {'attr': {'class': 'form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                </div>
                {{ form_errors(form.title) }}
            </div>

            <!-- Champ Description -->
            <div class="mb-4">
                {{ form_label(form.description, 'Description du chapitre', {'class': 'block text-gray-700 font-medium'}) }}
                <div class="mt-1">
                    {{ form_widget(form.description, {'attr': {'class': 'form-textarea mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                </div>
                {{ form_errors(form.description) }}
            </div>

            <!-- Champ de date de création -->
            <div class="mb-4">
                {{ form_label(form.createdAt, 'Date de création', {'class': 'block text-gray-700 font-medium'}) }}
                <div class="mt-1">
                    {{ form_widget(form.createdAt, {'attr': {'class': 'form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                </div>
                {{ form_errors(form.createdAt) }}
            </div>

            <!-- Champ de date de mise à jour -->
            <div class="mb-4">
                {{ form_label(form.updatedAt, 'Date de mise à jour', {'class': 'block text-gray-700 font-medium'}) }}
                <div class="mt-1">
                    {{ form_widget(form.updatedAt, {'attr': {'class': 'form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                </div>
                {{ form_errors(form.updatedAt) }}
            </div>

            <!-- Bouton de soumission -->
            <div class="flex justify-end">
                <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    Enregistrer les modifications
                </button>
            </div>

            {{ form_end(form) }}
        </form>
    </div>
{% endblock %}
