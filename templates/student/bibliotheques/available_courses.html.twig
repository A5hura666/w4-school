{% extends 'base.html.twig' %}

{% block title %}Bibliothèque{% endblock %}

{% block content %}
    <div class="container mx-auto mt-6 mb-6">
        <h1 class="text-center mb-4 text-2xl font-bold dark:text-white">Bibliothèque des Cours</h1>

        {% if courses is empty %}
            <p class="text-center">Aucun cours disponible.</p>
        {% else %}
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                {% for course in courses %}
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
                        <img
                                src="{{ course.illustrationUrl ? asset(course.illustrationUrl) : asset('uploads/image/default-illustration.png') }}"
                                class="w-full h-48 object-cover"
                                alt="Illustration de {{ course.title }}">
                        <div class="p-4">
                            <h5 class="text-lg font-semibold text-gray-800 dark:text-white">{{ course.title }}</h5>
                            <p class="text-gray-600 dark:text-gray-400">{{ course.description }}</p>
                            <a href="#" class="mt-2 inline-block px-4 py-2 text-white bg-blue-600 rounded hover:bg-blue-500 dark:bg-blue-500 dark:hover:bg-blue-400">
                                Voir le cours
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
